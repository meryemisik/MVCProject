@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin:8px;">
    <div class="card">
        <div class="card-header">
            KATEGORİ GÜNCELLE
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
            {

            <div class="form-group ">
                @Html.Label("ID")
                @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })<br />
                @Html.Label("Kategori Adı")
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CategoryName)<br />
                @Html.Label("Kategori Açıklaması")
                @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CategoryDescription)<br />
                @Html.Label("Durum")
                @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control" })<br />
                <a href="/AdminCategory/Index" class="btn btn-primary float-left">Kategori Listesine Git</a>
                <button class="btn btn-primary float-right">Güncelle</button>
            </div>
            }

        </div>
    </div>
  
</div>
