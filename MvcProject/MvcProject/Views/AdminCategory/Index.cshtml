@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding:8px;">

    <div class="card">
        <div class="card-header">
            KATEGORİ LİSTESİ
        </div>
        <div class="card-body">
            <table class="table table-striped text-center">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Durum</th>
                    <th>Başlıklar</th>
                    <th>İşlemler</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.CategoryID</th>
                        <td>@item.CategoryName</td>
                        <td>@item.CategoryStatus</td>
                        <td><button class="btn btn-info btn-sm">Başlıklar</button></td>
                        <td>
                            <a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt pr-2"></i>Delete</a>
                            <a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning btn-sm "><i class="fas fa-edit pr-2"></i>Edit</a>
                        </td>
                    </tr>
                }

            </table>
            <a href="/AdminCategory/AddCategory" class="btn btn-primary mt-3">Kategori Ekle</a>
        </div>
    </div
</div>

