@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "GetContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <div style="margin:8px;">
        <div class="card">
            <div class="card-header">
                GÖNDERİLEN MESAJLAR
            </div>
            <div class="card-body">
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            @Html.Action("ContactPartial", "Contact")

                            <div class="col-md-9">
                                <div class="card card-primary card-outline">
                                    <div class="card-header">
                                        <h3 class="card-title">Mesajı Oku</h3>

                                        <div class="card-tools">
                                            <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                                            <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                                        </div>
                                    </div>

                                    <div class="card-body p-0">
                                        <div class="mailbox-read-info">
                                            <h5>Konu : @Html.DisplayFor(x => x.Subject)</h5>
                                            <h6>
                                                Gönderen: @Html.DisplayFor(x => x.UserMail)
                                                <span class="mailbox-read-time float-right">@DateTime.Parse(Html.DisplayFor(x => x.ContactDate).ToString()).ToShortDateString()</span>
                                            </h6>
                                        </div>

                                        <div class="mailbox-read-message">
                                            <p>@Html.DisplayFor(x => x.Message)</p>

                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="float-right">
                                            <button type="button" class="btn btn-default"><i class="fas fa-reply"></i> Reply</button>
                                            <button type="button" class="btn btn-default"><i class="fas fa-share"></i> Forward</button>
                                        </div>
                                        <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Delete</button>
                                        <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                                    </div>
                                    <!-- /.card-footer -->
                                </div>
                                <!-- /.card -->
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </section>
            </div>
        </div>
    </div>
   
</body>
</html>
