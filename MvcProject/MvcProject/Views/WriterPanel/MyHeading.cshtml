@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <section class="content">
        <div style="margin:8px;">
            <div class="card">
                <div class="card-header">
                    BAŞLIK LİSTESİ
                </div>
                <div class="card-body">
                    <table class="table table-striped projects text-center">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 10%">
                                    Başlık Adı
                                </th>
                                <th style="width: 10%">
                                    Oluşturan Yazar
                                </th>
                               
                                <th style="width: 8%" class="text-center">
                                    Kategori
                                </th>
                                <th style="width: 20%">
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.HeadingID
                                    </td>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br />
                                        <small>

                                            @(((DateTime)item.HeadingDate).ToString("dd-MMMM-yyyy"))
                                        </small>
                                    </td>

                                    <td style="width:10%;">
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                            </li>

                                        </ul>
                                    </td>
                                   
                                    <td class="project-state">
                                        <span class="badge badge-success">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                            <i class="fas fa-folder">
                                            </i>
                                            Yazılar
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@item.HeadingID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/WriterPanel/NewHeading" class="btn btn-primary mt-3">Başlık Ekle</a>
                </div>
            </div>
        </div>
    </section>
</body>
</html>





